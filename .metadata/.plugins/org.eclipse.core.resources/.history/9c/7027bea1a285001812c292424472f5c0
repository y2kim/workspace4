	<script>
		$(document).ready(function() {
			$("#selectAll").click(function(){
				$(location).attr("href","select.do");
			})
			
			$("#selectfind").click(function(){
				var types = $("#selecttype").val();
				
				if(types = "writer"){
					//$(location).attr("href","writerselect.do");	
					$("#suckfornt").attr('action','writerselect.do').submit();
				}else{
					//$(location).attr("href","contentselect.do");	
					$("#suckfornt").attr('action','contentselect.do').submit();
				}
			})
		})
	</script>
	
